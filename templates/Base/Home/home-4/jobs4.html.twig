{% for item in jobs4|slice(0, 8) %}
    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
        <div class="jbs-grid-layout border">
            <div class="right-tags-capt">

                {% if item.tag1 is defined and item.tag1 == true %}
                    <span class="featured-text">Featured</span>
                    <span class="urgent">Urgent</span>
                {% else %}
                    <span class="{{ item.class }}">{{ item.name }}</span>
                {% endif %}

            </div>
            <div class="jbs-grid-emp-head">
                <div class="jbs-grid-emp-content">
                    <div class="jbs-grid-emp-thumb"><a href="{{ path('app_job_detail', { 'slug': item.title|lower|replace({' ': '-'}) }) }}"><figure><img src="{{ asset( item.img ) }}" class="img-fluid" alt=""></figure></a></div>
                    <div class="jbs-grid-job-caption">
                        <div class="jbs-job-employer-wrap"><span>{{ item.app }}</span></div>
                        <div class="jbs-job-title-wrap"><h4><a href="{{ path('app_job_detail', { 'slug': item.title|lower|replace({' ': '-'}) }) }}" class="jbs-job-title">{{ item.title }}</a></h4></div>
                    </div>
                </div>
            </div>
            <div class="jbs-grid-job-description">
                <p>{{ item.desc }}</p>
            </div>
            <div class="jbs-grid-job-edrs">
                <div class="jbs-grid-job-edrs-group">
                    <span><i class="fa-solid fa-location-dot me-1"></i>{{ item.location }}</span>
                    <span><i class="fa-regular fa-clock me-1"></i>{{ item.time }}</span>
                    <span><i class="fa-solid fa-calendar-days me-1"></i>{{ item.ago }}</span>
                </div>
            </div>
            <div class="jbs-grid-job-apply-btns">
                <div class="jbs-btn-groups">
                    <div class="jbs-sng-blux"><div class="jbs-grid-package-title smalls"><h5>{{ item.price }}<span>\Year</span></h5></div></div>
                    <div class="jbs-sng-blux"><a href="JavaScript:Void(0);" class="btn btn-md btn-main px-4">Quick Apply</a></div>
                </div>
            </div>
        </div>	
    </div>
{% endfor %}